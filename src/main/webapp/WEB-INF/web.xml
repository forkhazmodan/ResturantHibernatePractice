<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <listener>
    <listener-class>
      max.utils.MyAppServletContextListener
    </listener-class>
  </listener>

  <servlet>
    <servlet-name>Menu Items</servlet-name>
    <servlet-class>max.servlets.MenuItemsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Menu Items</servlet-name>
    <url-pattern>/menu-items</url-pattern>
  </servlet-mapping>
</web-app>

